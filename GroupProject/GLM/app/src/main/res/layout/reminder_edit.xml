<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E1E1"
    tools:context=".EditReminder">


    <EditText
        android:id="@+id/newReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Enter Reminder Name"
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/oldReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="50dp"
        android:background="#9E9E9E"
        android:text="Save" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:background="#9E9E9E"
        android:text="Cancel" />

    <TextView
        android:id="@+id/oldTime"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="155dp"
        android:layout_marginTop="149dp"
        android:text="TextView"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newMonth"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="249dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center_horizontal|center_vertical"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/monthPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="300dp"
        android:text="Month"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/dayPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="300dp"
        android:text="Day"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/hourPreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="300dp"
        android:text="Hour"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newHour"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="196dp"
        android:layout_marginBottom="249dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/minutePreview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="300dp"
        android:text="Minute"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/newMinute"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="279dp"
        android:layout_marginBottom="249dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ToggleButton
        android:id="@+id/ampm"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="353dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="249dp"
        android:background="#9E9E9E"
        android:text="ToggleButton"
        android:textOff="AM"
        android:textOn="PM" />

    <EditText
        android:id="@+id/newDay"
        android:layout_width="66dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="98dp"
        android:layout_marginBottom="249dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="20sp" />

</RelativeLayout>